    <nav id="mySidenav" class="sidenav">
      <%= link_to "Tutorials", posts_path %>
      <%= link_to "Challenges", projects_path %>
      <a href="#">Team</a>
      <a href="#">Contact</a>
    </nav>
  </header>

  <body>
    <%= yield %>
  </body>

  <footer id="main_footer">
    <p class="copyright">&copy; 2017 DevKnight</p>
    <nav>
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-google"></i></a>
    </nav>
  </footer>
</html>
